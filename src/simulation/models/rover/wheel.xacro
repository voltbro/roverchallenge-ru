<include xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:macro name="wheel" params="index xyz axis diameter">

<link name="wheel_${index}">
    <inertial>
        <mass value="1"/>
        <inertia ixx="0.043333" ixy="0" ixz="0" iyy="0.043333" iyz="0" izz="0.08"/>
    </inertial>
    <visual name="wheel_${index}_visual">
        <geometry>
            <cylinder radius="${diameter}" length="0.1"/>
        </geometry>
    </visual>
    <collision name='wheel_${index}_collision'>
        <geometry>
            <cylinder radius="${diameter}" length="0.1"/>
        </geometry>
    </collision>
</link>

<joint name="wheel_${index}_joint" type="revolute">
    <parent link="base"/>
    <child link="wheel_${index}"/>
    <origin xyz="${xyz}" rpy="${pi/2} 0 0"/>
    <axis xyz="${axis}"/>
    <limit
        lower="-1.79769e+308"
        upper="+1.79769e+308"
        effort="100"
        velocity="100"
    />
</joint>

</xacro:macro>
</include>
