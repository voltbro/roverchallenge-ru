<?xml version="1.0" ?>
<sdf xmlns:xacro="http://www.ros.org/wiki/xacro" version="1.10">
<model name="switch_with_base">

<link name="frame">
    <xacro:macro name="frame_stl">
        <geometry>
          <mesh>
            <uri>file:/$(env MODELS_DIR)/objects/switch/01_base.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </xacro:macro>
      <visual name="frame_visual">
        <xacro:frame_stl/>
        <material>
          <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
</link>

<link name="tumbler">
    <pose>0 0 -0.021 0 0 0</pose>
    <xacro:macro name="tumbler_stl">
        <geometry>
          <mesh>
            <uri>file:/$(env MODELS_DIR)/objects/switch/01_tumbler.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </xacro:macro>
      <collision name="tumbler_collision">
        <xacro:tumbler_stl/>
      </collision>
      <visual name="tumbler_visual">
        <xacro:tumbler_stl/>
        <material>
          <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
</link>

<joint name="tumbler_to_frame_joint" type="revolute">
    <parent>frame</parent>
    <child>tumbler</child>
    <pose>0 0 0 0 0 0</pose>
    <axis>
      <xyz>0 1 0</xyz>
      <limit>
        <lower>${-pi/4}</lower>
        <upper>${+pi/4}</upper>
      </limit>
    </axis>
</joint>

</model>
</sdf>
