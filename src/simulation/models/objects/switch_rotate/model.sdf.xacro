<?xml version="1.0" ?>
<sdf xmlns:xacro="http://www.ros.org/wiki/xacro" version="1.10">
<model name="rotating_switch">

<link name="frame">
  <self_collide>false</self_collide>
  <visual name="frame_visual">
    <geometry>
      <mesh>
        <uri>file:/$(env MODELS_DIR)/objects/switch_rotate/02-rotsw-base.stl</uri>
        <scale>1 1 1</scale>
      </mesh>
    </geometry>
    <material>
      <script>
        <uri>file://media/materials/scripts/gazebo.material</uri>
        <name>Gazebo/Red</name>
      </script>
    </material>
  </visual>
</link>

<link name="rotator">
    <self_collide>false</self_collide>
    <pose>0 0 -0.004 0 0 0</pose>
    <xacro:macro name="rotator_stl">
        <geometry>
          <mesh>
            <uri>file:/$(env MODELS_DIR)/objects/switch_rotate/02-rotate-switch.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </xacro:macro>
      <collision name="rotator_collision">
        <xacro:rotator_stl/>
      </collision>
      <visual name="rotator_visual">
        <xacro:rotator_stl/>
        <material>
          <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
</link>

<joint name="rotator_to_frame_joint" type="revolute">
    <parent>frame</parent>
    <child>rotator</child>
    <pose>0 0 0 0 0 0</pose>
    <axis>
      <xyz>0 0 1</xyz>
      <limit>
        <lower>${-pi}</lower>
        <upper>${+pi}</upper>
      </limit>
    </axis>
</joint>

</model>
</sdf>
