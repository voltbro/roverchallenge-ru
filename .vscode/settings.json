{
    // Оптимизации
    "files.exclude": {
      "**/tmp/**": true,
      "**/node_modules/**": true,
      "**/.git/objects/**": true,
      "**/__pycache__": true,
      // Custom
      "**/*.key": true,
      "**/*.key.pub": true,
      "**/build/**": true,
      "**/log/**": true
    },
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/tmp/**": true,
      "**/dist/**": true,
      "**/devel/**": true,
      "**/build/**": true
    },
    "search.exclude": {
      "**/node_modules/**": true,
      "**/dist/**": true,
      "**/tmp/**": true,
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true
    },
    // Автокомплит, анализ и пр.
    "python.analysis.diagnosticSeverityOverrides": {
      "reportGeneralTypeIssues": "warning"
    },
    "python.analysis.downloadStubs": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "spellright.ignoreFiles": [
      "**/.gitignore",
      "**/.spellignore"
    ],
    "spellright.language": [
      "ru",
      "en"
    ],
    "spellright.documentTypes": [
      "markdown",
      "latex",
      "plaintext"
    ],
    "spellright.parserByClass": {
      "dsdl": {
        "parser": "code"
      }
    },
    "python.analysis.typeCheckingMode": "basic",
    "C_Cpp.files.exclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/tmp/**": true,
      "**/dist/**": true,
      "**/devel/**": true,
      "**/build/**": true,
      "**/.vscode": true,
      "**/.vs": true
    },
    "C_Cpp.codeAnalysis.exclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/tmp/**": true,
      "**/dist/**": true,
      "**/devel/**": true,
      "**/build/**": true,
      "**/.vscode": true,
      "**/.vs": true
    },
    "C_Cpp.intelliSenseMemoryLimit": 2048,
    "cmake.configureOnOpen": false,
    "cmake.sourceDirectory": "/home/igor/Projects/roverchallenge-ru/src/gazebo_systems"
  }
